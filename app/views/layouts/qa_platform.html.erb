<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "QA Platform" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="bg-gray-50">
    <!-- Top Navigation Bar -->
    <nav class="fixed top-0 z-50 w-full bg-white border-b border-gray-200">
      <div class="px-3 py-3 lg:px-5 lg:pl-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center justify-start rtl:justify-end">
            <button data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar" aria-controls="logo-sidebar" type="button" class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200">
              <span class="sr-only">Open sidebar</span>
              <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
              </svg>
            </button>
            <a href="/" class="flex ms-2 md:me-24">
              <span class="self-center text-xl font-semibold sm:text-2xl whitespace-nowrap text-blue-600">QA Platform</span>
            </a>
          </div>
          
          <div class="flex items-center">
            <div class="flex items-center ms-3">
              <!-- Organization Selector -->
              <% if current_user&.organization %>
                <div class="text-sm text-gray-500 mr-4">
                  <span class="font-medium"><%= current_user.organization.name %></span>
                </div>
              <% end %>
              
              <!-- User Dropdown -->
              <div class="relative">
                <button type="button" class="flex text-sm bg-gray-800 rounded-full focus:ring-4 focus:ring-gray-300" aria-expanded="false" data-dropdown-toggle="dropdown-user">
                  <span class="sr-only">Open user menu</span>
                  <div class="w-8 h-8 rounded-full bg-blue-600 flex items-center justify-center text-white text-sm font-medium">
                    <%= current_user&.email&.first&.upcase %>
                  </div>
                </button>
                <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded shadow" id="dropdown-user">
                  <div class="px-4 py-3">
                    <p class="text-sm text-gray-900"><%= current_user&.email %></p>
                    <p class="text-sm font-medium text-gray-500 truncate"><%= current_user&.role&.humanize %></p>
                  </div>
                  <ul class="py-1">
                    <li><a href="/settings/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Settings</a></li>
                    <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Sidebar Navigation -->
    <div id="qa-navigation"></div>
    
    <!-- Main Content -->
    <div class="p-4 sm:ml-64">
      <div class="p-4 mt-14">
        <!-- Flash Messages -->
        <% if notice %>
          <div class="mb-4 p-4 text-green-800 border border-green-300 rounded-lg bg-green-50">
            <%= notice %>
          </div>
        <% end %>
        <% if alert %>
          <div class="mb-4 p-4 text-red-800 border border-red-300 rounded-lg bg-red-50">
            <%= alert %>
          </div>
        <% end %>
        
        <%= yield %>
      </div>
    </div>

    <!-- Initialize React Navigation Component -->
    <script>
      window.currentUser = <%= raw current_user.to_json(methods: [:can_see_organization_management?]) if current_user %>;
      window.currentPath = '<%= request.path %>';
    </script>

    <script type="module">
      import QANavigation from './components/qa_platform/QANavigation';
      import React from 'react';
      import { createRoot } from 'react-dom/client';

      const navigationContainer = document.getElementById('qa-navigation');
      if (navigationContainer && window.currentUser) {
        const root = createRoot(navigationContainer);
        root.render(React.createElement(QANavigation, {
          currentUser: {
            role: window.currentUser.role,
            canSeeOrganizationManagement: window.currentUser.can_see_organization_management
          },
          currentPath: window.currentPath
        }));
      }
    </script>
  </body>
</html>