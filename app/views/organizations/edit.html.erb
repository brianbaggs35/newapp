<div id="organization-form" 
     data-organization="<%= @organization.to_json(only: [:id, :name, :description, :active]) if @organization %>">
</div>

<script type="module">
  import { createRoot } from 'react-dom/client';
  import React from 'react';
  import OrganizationForm from '../javascript/components/organizations/OrganizationForm.jsx';

  const container = document.getElementById('organization-form');
  const root = createRoot(container);
  
  const organization = container.dataset.organization ? JSON.parse(container.dataset.organization) : null;
  
  root.render(React.createElement(OrganizationForm, {
    organization: organization
  }));
</script>
